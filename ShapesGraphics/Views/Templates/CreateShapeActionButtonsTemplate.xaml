<UserControl x:Class="ShapesGraphics.Views.Templates.CreateShapeActionButtonsTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShapesGraphics.Views.Templates"
                  xmlns:s="clr-namespace:System;assembly=mscorlib"
             
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Save" HorizontalAlignment="Left" Command="{Binding CloseCommand}">
                <!-- Dialog promt is not required -->
                <Button.CommandParameter>
                    <s:Boolean>False</s:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button Content="Cancel" HorizontalAlignment="Right" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
